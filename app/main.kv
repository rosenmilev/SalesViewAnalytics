<ContentNavigationDrawer>:
    MDList:
        OneLineListItem:
            text: "Screens"
        OneLineIconListItem:
            text: "Dashboard"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "dashboard"
            IconLeftWidget:
                icon: "view-dashboard"



        OneLineIconListItem:
            text: "Reports"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "reports"
            IconLeftWidget:
                icon: "chart-bar"

        OneLineIconListItem:
            text: "Analytics"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "analytics"
            IconLeftWidget:
                icon: "chart-pie"

        OneLineIconListItem:
            text: "External Data"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "external_data"
            IconLeftWidget:
                icon: "web"

<PlotCard>:
    card_title: ''
    orientation: "vertical"
    padding: "8dp"
    size_hint: None, None
    size: "500dp", "280dp"
    pos_hint: {"center_x": .5, "center_y": .5}
    md_bg_color: 230/255, 230/255, 230/255, 1

    MDLabel:
        text: root.card_title
        theme_text_color: "Primary"
        size_hint_y: None
        height: self.texture_size[1]

    MDSeparator:
        height: "1dp"


<DashboardCard>:
    card_title: ''
    today_sales: ''
    average_sales_client: ''
    average_sales_order: ''
    number_of_clients: ''
    number_of_orders: ''

    orientation: "vertical"
    padding: "16dp"
    size_hint: None, None
    size: "600dp", "320dp"
    pos_hint: {"center_x": .5, "center_y": .5}
    md_bg_color: 230/255, 230/255, 230/255, 1

    BoxLayout:
        orientation: "vertical"
        spacing: "8dp"

        MDLabel:
            text: root.card_title
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            theme_text_color: "Primary"

        MDSeparator:
            height: "2dp"

        MDLabel:
            text: "Today's Sales: " + root.today_sales
            theme_text_color: "Secondary"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "Avg Sales/Client: " + root.average_sales_client
            theme_text_color: "Secondary"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "Avg Sales/Order: " + root.average_sales_order
            theme_text_color: "Secondary"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "Number of Clients: " + root.number_of_clients
            theme_text_color: "Secondary"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "Number of Orders: " + root.number_of_orders
            theme_text_color: "Secondary"
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]


<DashboardScreen>:
    ScrollView:
        BoxLayout:
            pos_hint: {"center_x": .5, "center_y": .5}
            orientation: 'vertical'
            size_hint_y: None
            width: self.parent.width
            height: self.minimum_height
            padding: dp(10)
            spacing: dp(10)

            # Container for the first large card





            # GridLayout for the other three cards
            GridLayout:
                cols: 3  # Three cards in one row
                rows: 2
                size_hint_y: None
                width: self.parent.width
                height: self.minimum_height
                spacing: dp(10)

                PlotCard:
                    id: monthly_sales_card
                    card_title: "Monthly Sales"
                    size_hint: None, None
                    size: "1000dp", "350dp"
                    col_span: 2
#                    pos_hint: {"center_x": .5, "center_y": .5}

                DashboardCard:
                    id: daily_info
                    size_hint: None, None
                    size: "400dp", "280dp"

            GridLayout:
                cols: 3  # Three cards in one row
                size_hint_y: None
                width: self.parent.width
                height: self.minimum_height
                spacing: dp(10)



                PlotCard:
                    id: top_customers_card
                    card_title: "Top Customers"

                PlotCard:
                    id: top_sub_categories_card
                    card_title: "Top Sub-Categories"

                PlotCard:
                    id: sales_by_category_card
                    card_title: "Sales by category"
                    size: "400dp", "280dp"


<AnalyticsScreen>:
    GridLayout:
        rows:3


        BoxLayout:
            orientation: 'horizontal'
            MDCard:
                card_title: ''
                orientation: "horizontal"
                padding: "8dp"
                size_hint: None, None
                size: "900dp", "45dp"
                pos_hint: {"center_x": 0.7, "center_y": 0.95}
                spacing: dp(10)
                md_bg_color: 175/255, 202/255, 206/255, 1

                MDLabel:
                    text: "Analysis Settings"
                    size_hint_x: None
                    width: self.width



                MDRaisedButton:
                    id: a_date_picker
                    padding: '8dp'
                    text: "Select Period"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: root.show_date_picker()


                MDRaisedButton:
                    id: analysis_dropdown
                    padding: '8dp'
                    text: "Select Type"
                    pos_hint: {"center_x": .6, "center_y": .5}
                    on_release: root.menu_1.open()


                MDRaisedButton:
                    id: item_dropdown
                    padding: '8dp'
                    text: "Select Item"
                    pos_hint: {"center_x": .6, "center_y": .5}
                    on_release: root.menu_2.open()
                    opacity: 0
                    disabled: True

                Widget:
                    size_hint_x: None
                Widget:
                    size_hint_x: None
                MDRaisedButton:
                    id: generate_button
                    pos_hint: {"center_y": .5}
                    text: "Generate"
                    on_release: root.generate_result()



        GridLayout:
            cols:3
            id: bottom_part

            BoxLayout:
                id: a_table_container_current
                size_hint: 0.33, 1

            BoxLayout:
                id: a_table_container_last
                size_hint: 0.33, 1

            BoxLayout:
                id: a_plot_card
                size_hint: 0.33, 1
                PlotCard:
                    id: a_plot
                    md_bg_color: 0, 0, 0, 0


