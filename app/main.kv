        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        text: "Export to CSV"
        on_release: root.export_to_csv()
        opacity: 0
        disabled: True


MDScreen:
    canvas:
        Color:
            rgba: 225/255, 237/255, 240/255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        size: root.width, root.height
        rows: 3
        MDTopAppBar:
            pos_hint: {"top": 1}
            elevation: 4
            title: "Sales View Analytics"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:
            pos_hint: {"top": 1}  # Ensure it fills the screen vertically

            MDScreenManager:
                id: screen_manager


                DashboardScreen:

                    name: "dashboard"
                    text: '1'

                ReportsScreen:
                    name: "reports"
                    text: '2'

                AnalyticsScreen:
                    name: "analytics"
                    text: '3'

                ExternalDataScreen:
                    name: "external_data"
                    text: '4'

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer